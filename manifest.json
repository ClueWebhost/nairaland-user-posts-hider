{
  "manifest_version": 3,
  "name": "Nairaland Forum Filter",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["*://*.nairaland.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "background": {
        "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}

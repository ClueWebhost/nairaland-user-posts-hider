{
  "manifest_version": 3,
  "name": "Hide Spam Posts on Nairaland",
  "version": "1.0",
  "description": "This chrome extension hides posts from spammers on the Nairaland forum to fix your search/user experience.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.nairaland.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}

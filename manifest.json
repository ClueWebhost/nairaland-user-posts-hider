{
  "manifest_version": 3,
  "name": "Nairaland Forum Filter",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["*://*.nairaland.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
